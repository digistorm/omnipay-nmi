{
    "name": "digistorm/omnipay-nmi",
    "type": "library",
    "description": "NMI (Network Merchants Inc.) driver for the Omnipay PHP payment processing library",
    "keywords": [
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "purchase",
        "nmi",
        "durango",
        "network",
        "inc"
    ],
    "homepage": "https://github.com/digistorm/omnipay-nmi",
    "license": "MIT",
    "autoload": {
        "psr-4": { "Omnipay\\NMI\\" : "src/" }
    },
    "require": {
        "php": "^8.1",
        "ext-bcmath":  "*",
        "ext-simplexml": "*",
        "ext-libxml": "*",
        "omnipay/common": "^3",
        "symfony/http-client": "^7.1",
        "guzzlehttp/guzzle": "^7.8",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "require-dev": {
        "omnipay/tests": "^4",
        "http-interop/http-factory-guzzle": "^1.2",
        "rector/rector": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.64",
        "spaze/phpstan-disallowed-calls": "^3.5"
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
